<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sales Report</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
 <!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


  <style>
    .filter-card {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body>
  
 <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
  <%- include('navbar') %>
  <a href="/dashboard" class="text-decoration-none fw-bold" style="color: #0a3679;">
    <i class="bi bi-arrow-left-circle-fill" style="color: goldenrod; font-size: 1.3rem; vertical-align: middle;"></i>
    <span class="ms-1" style="color: #04265a;">Back to Dashboard</span>
  </a>
  </div>

<div class="container mt-4">
  <h2 class="mb-4 text-primary fw-bold">üìä Sales Report</h2>

  <!-- Filter Form -->
  <form action="/sales-report" method="GET" class="row g-3">
    <!-- From Date -->
    <div class="col-md-4 col-sm-6">
      <div class="filter-card p-3">
        <label class="form-label">From Date</label>
        <input type="date" name="fromDate" class="form-control" value="<%= filters.fromDate || '' %>">
      </div>
    </div>

    <!-- To Date -->
    <div class="col-md-4 col-sm-6">
      <div class="filter-card p-3">
        <label class="form-label">To Date</label>
        <input type="date" name="toDate" class="form-control" value="<%= filters.toDate || '' %>">
      </div>
    </div>

    <!-- Product Name -->
    <div class="col-md-4 col-sm-6">
      <div class="filter-card p-3">
        <label class="form-label">Product Name</label>
        <input type="text" name="productName" class="form-control" placeholder="e.g. Cement" value="<%= filters.productName || '' %>">
      </div>
    </div>

    <!-- Year -->
    <div class="col-md-4 col-sm-6">
      <div class="filter-card p-3">
        <label class="form-label">Year</label>
        <input type="number" name="year" class="form-control" placeholder="e.g. 2023"
               min="2020" max="<%= new Date().getFullYear() %>" value="<%= filters.year || '' %>">
      </div>
    </div>

    <!-- Month -->
    <div class="col-md-4 col-sm-6">
      <div class="filter-card p-3">
        <label class="form-label">Month</label>
        <select name="month" class="form-control">
          <option value="">--Select--</option>
          <% for(let m=1; m<=12; m++){ %>
            <option value="<%= m %>" <%= filters.month == m ? 'selected' : '' %>>
              <%= new Date(2000, m-1).toLocaleString('default', { month: 'long' }) %>
            </option>
          <% } %>
        </select>
      </div>
    </div>

    <!-- Week -->


    <!-- Buttons -->
    <!-- Filter Button -->
    <div class="col-md-3 d-flex align-items-end">
      <button type="submit" class="btn btn-primary w-100">
        <i class="bi bi-funnel"></i> Filter
      </button>
    </div>
  <!-- Reset Button -->
    <div class="col-md-3 d-flex align-items-end">
      <a href="/sales-report" class="btn btn-secondary w-100">
        <i class="bi bi-arrow-clockwise"></i> Reset
      </a>
    </div>
  </form>

  <!-- Download Buttons -->
  <div class="mt-4 d-flex gap-2">
    <a href="/export-excel?<%= new URLSearchParams(filters).toString() %>" class="btn btn-success">‚¨áÔ∏è Download Excel</a>
    <a href="/export-pdf?<%= new URLSearchParams(filters).toString() %>" class="btn btn-danger">‚¨áÔ∏è Download PDF</a>
  </div>

  <!-- Sales Table -->
  <div class="table-responsive mt-4">
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Invoice No</th>
        <th>Product Code</th>
        <th>Product Name</th>
        <th>Qty</th>
        <th>Amount</th>
        <th>Profit</th>
        <th>Date</th>
        <th>Payment Mode</th>
        <th>Status</th>
        <th>Action</th>
        
      </tr>
    </thead>
    <tbody>
      <% if (sales.length > 0) { %>
        <% sales.forEach(sale => { %>
          <tr>
            <td><%= sale.invoiceNo %></td>
            <td><%= sale.productCode %></td>
            <td><%= sale.productName %></td>
            <td><%= sale.qty %></td>
            <td>KSH. <%= sale.amount.toLocaleString() %></td>
            <td>KSH. <%= sale.profit.toLocaleString() %></td>
            <td><%= sale.date %></td>
            <td><%= sale.paymentMode %></td>
            <td><%= sale.status %></td>
            <td>
          <form action="/sales/delete/<%= sale.id %>" method="POST" 
            onsubmit="return confirm('Are you sure you want to delete this record?');">
             <button type="submit" class="btn btn-sm btn-danger">
           <i class="bi bi-trash"></i> Delete
           </button>
            </form>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="9" class="text-center text-muted">No records found</td>
        </tr>
      <% } %>
    </tbody>
    <% if (sales.length > 0) { %>
    <tfoot class="table-light fw-bold">
      <tr>
        <td colspan="3" class="text-end">TOTAL</td>
        <td><%= sales.reduce((sum, s) => sum + s.qty, 0) %> items</td>
        <td>KSH. <%= sales.reduce((sum, s) => sum + s.amount, 0).toLocaleString() %></td>
        <td>KSH. <%= sales.reduce((sum, s) => sum + s.profit, 0).toLocaleString() %></td>
        <td colspan="3"></td>
      </tr>
    </tfoot>
    <% } %>
  </table>
</div>

<script>
    // Reset button functionality
    document.getElementById("resetBtn").addEventListener("click", function() {
      document.getElementById("year").value = "";
      document.getElementById("month").value = "";
      document.getElementById("week").value = "";
    });
  </script>
    <!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
