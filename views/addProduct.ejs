<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Product - Joski and Sons Stores</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- Back Link -->
  <div class="d-flex justify-content-between align-items-center mt-3 mb-3 container">
    <a href="/dashboard" class="text-decoration-none fw-bold d-flex align-items-center">
      <i class="bi bi-arrow-left-circle-fill text-warning fs-5 me-2"></i>
      <span class="fs-6 text-primary">Back to Dashboard</span>
    </a>
  </div>

  <div class="container py-4">
    <div class="text-center mb-5">
      <h2 class="fw-bold">Add New Product</h2>
      <p class="text-muted">Fill in product details below</p>
    </div>

    <% if (error) { %>
      <div class="alert alert-danger text-center shadow-sm" role="alert">
        <%= error %>
      </div>
    <% } %>

    <form action="/products/add" method="POST" class="card p-4 shadow-sm bg-white">
      <div class="row g-3 mb-3">
        <div class="col-md-6">
          <div class="form-floating">
            <input type="text" name="code" class="form-control" value="<%= code %>" id="code" readonly placeholder=" ">
            <label for="code">Product Code</label>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-floating">
            <input type="text" name="name" class="form-control" id="name" placeholder=" " required>
            <label for="name">Product Name</label>
          </div>
        </div>
      </div>
      
      <div class="row g-3 mb-3">
        <div class="col-md-6">
          <div class="form-floating">
            <input type="number" name="remainingQty" class="form-control" id="remainingQty" min="0" placeholder=" " required>
            <label for="remainingQty">Remaining Qty</label>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-floating">
            <input type="number" step="0.01" name="actualPrice" class="form-control" id="actualPrice" min="1" placeholder=" " required>
            <label for="actualPrice">Actual Price (KES)</label>
          </div>
        </div>
      </div>

      <div class="row g-3 mb-3">
        <div class="col-md-6">
          <div class="form-floating">
            <input type="number" step="0.01" name="sellingPrice" class="form-control" id="sellingPrice" min="1" placeholder=" " required>
            <label for="sellingPrice">Selling Price (KES)</label>
          </div>
        </div>
        
      </div>

      <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-success px-4">Save Product</button>
        <a href="/products" class="btn btn-outline-secondary px-4">Cancel</a>
      </div>
    </form>
  </div>

</body>
</html>
